{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"recommended": true
			},
			"correctness": {
				"recommended": true
			},
			"style": {
				"recommended": true
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"files": {
		"ignore": ["node_modules", "dist", ".wrangler", "worker-configuration.d.ts"]
	}
}
